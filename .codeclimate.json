{
    "version": 2,
    "plugins": {
        "TSLint": {
            "enabled": true
        },
        "eslint": {
            "enabled": false
        }
    },
    "checks": {
        "file-lines": {
            "enabled": true,
            "config": {
                "threshold": 400
            }
        },
        "method-lines": {
            "enabled": true,
            "config": {
                "threshold": 35
            }
        },
        "method-complexity": {
            "enable": true,
            "config": {
                "threshold": 13
            }
        }
    },
    "exclude_patterns": [
        "dist/",
        "demo/"
    ]
}
